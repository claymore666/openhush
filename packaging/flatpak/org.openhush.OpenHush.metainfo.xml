<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.openhush.OpenHush</id>

  <name>OpenHush</name>
  <summary>Open-source voice-to-text that acts as a seamless whisper keyboard</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <developer id="org.openhush">
    <name>OpenHush Contributors</name>
  </developer>

  <description>
    <p>
      OpenHush is a privacy-first voice-to-text tool that runs entirely on your local machine.
      No cloud, no subscriptions, no telemetry. Just fast, accurate transcription using
      OpenAI's Whisper model.
    </p>
    <p>Features:</p>
    <ul>
      <li>Push-to-talk and toggle recording modes</li>
      <li>Auto-paste transcribed text at your cursor</li>
      <li>GPU acceleration (NVIDIA CUDA, AMD ROCm, Vulkan)</li>
      <li>99+ language support with auto-detection</li>
      <li>Optional translation to English</li>
      <li>LLM-powered grammar correction via Ollama</li>
      <li>Voice Activity Detection for continuous dictation</li>
      <li>Custom vocabulary for domain-specific terms</li>
      <li>File transcription for WAV/MP3 recordings</li>
      <li>D-Bus integration for scripting and automation</li>
    </ul>
    <p>
      OpenHush is designed for privacy-conscious users who need fast, accurate dictation
      without sending their voice data to the cloud.
    </p>
  </description>

  <launchable type="desktop-id">org.openhush.OpenHush.desktop</launchable>

  <url type="homepage">https://github.com/claymore666/openhush</url>
  <url type="bugtracker">https://github.com/claymore666/openhush/issues</url>
  <url type="vcs-browser">https://github.com/claymore666/openhush</url>

  <provides>
    <binary>openhush</binary>
    <dbus type="user">org.openhush.Daemon1</dbus>
  </provides>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
  </recommends>

  <supports>
    <control>voice</control>
  </supports>

  <categories>
